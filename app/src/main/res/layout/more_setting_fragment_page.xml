<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <RelativeLayout 
        android:id="@+id/top_relativeLayout"
        android:background="@drawable/grid_bg"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip">
	      <!-- 
	        <ImageView
	        android:id="@+id/app"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:layout_alignParentLeft="true"
	        android:layout_margin="5.0dip" 
	        android:src="@drawable/app" />
	         -->
	         <ImageButton
				android:id="@+id/app"
				android:layout_width="45dp"
				android:layout_height="45dp"
				android:layout_centerVertical="true"
				android:layout_alignParentLeft="true"
				android:layout_margin="1.0dip" 
				android:background="#00000000"
				android:onClick="toggleMenu"
				android:src="@drawable/mainright_menu_selector" />
	         
	        <TextView 
	            android:id="@+id/app_tv"
	            android:layout_toRightOf="@+id/app"
	            android:textSize="18.0sp" 
	            android:textStyle="bold" 
	            android:layout_centerVertical="true"
	            android:textColor="@color/color_white" 
	            android:layout_gravity="center_vertical" 
	            android:layout_width="wrap_content" 
	            android:layout_height="wrap_content" 
	            android:text="@string/app_name" 
	            android:shadowColor="@color/color_shadow" 
	            android:shadowDx="1.0" 
	            android:shadowDy="1.0" 
	            android:shadowRadius="1.0" />
        
             <ImageButton
                 android:layout_alignParentRight="true"
                 android:id="@+id/ptz_vert_muscreen"
                 android:layout_width="45dp"
                 android:layout_height="45dp"
                 android:layout_marginRight="5dp"
                 android:background="#00000000"
                 android:src="@drawable/muscreen" />
    </RelativeLayout>

</LinearLayout>
