<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/color_top_bg"
    >

 	<LinearLayout 
 	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
	    android:layout_gravity="center_horizontal"
    	android:background="@color/color_top_bg"
	    android:gravity="center_horizontal"
	    android:orientation="vertical" >
 		<TextView
                android:id="@+id/user_name"
                android:gravity="center_horizontal|center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/content"
                android:textColor="@color/color_white"
                android:textSize="30sp" />
        <ImageView
	        android:id="@+id/split_line1"
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="@color/color_top_bg_pressed" 
	    />
        
        <ListView
	        android:id="@+id/user_setting_listview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
    		android:background="@color/color_top_bg"
	        android:cacheColorHint="#00000000"
	        android:divider="@color/color_top_bg_pressed"
	        android:dividerHeight="1dp"
	        android:fadeScrollbars="true"
	        android:fadingEdge="none"
	        android:fastScrollEnabled="true"
	        android:listSelector="@drawable/listitem_pressed_selector" 
	    />
	</LinearLayout>
	
	<Button
		android:id="@+id/one"
		android:layout_width="100dp"
		android:layout_height="43dp"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="100dp"
		android:gravity="center"
		
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true"
		android:background="@drawable/btnselector"
		android:onClick="exitApp"
		android:textColor="@color/color_white"
		android:text="@string/exit" 
		android:textSize="20sp"
		/>
</RelativeLayout>
